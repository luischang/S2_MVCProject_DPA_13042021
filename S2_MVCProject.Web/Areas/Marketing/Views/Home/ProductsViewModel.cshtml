@using S2_MVCProject.Web.Areas.Marketing.Models
@model IEnumerable<Product>

<h1>Products With ViewModel</h1>


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Description</th>
            <th>Title</th>
            <th>Marker</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@item.Id</td>
                <td>@item.Description</td>
                <td>
                    <a href="@item.Url" target="_blank">@item.Title</a>
                </td>
                <td>@item.Maker</td>
                <td>
                    <img src="@item.Img" style="height:40px;width:40px" />
                </td>
            </tr>
        }
    </tbody>
</table>